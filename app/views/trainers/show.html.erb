<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemons: <%- @trainer.pokemons.each do |pokemon| -%>
	<% unless current_trainer.id != @trainer.id and pokemon.health <= 0 %>
	<br><%= pokemon.name %>, level: <%= pokemon.level %>, health: <%= pokemon.health %>, exp: <%= pokemon.experience %></br>

	<%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button small", :method => :patch %>
	<%- end -%>

		<% if current_trainer.id == @trainer.id and pokemon.health < 100 %>
			<%= button_to "Heal!", heal_path(id: pokemon.id), :class => "button small", :method => :patch %>
		<%- end -%>

	<% end %>
</p>

<% if current_trainer.id == @trainer.id %>
	<%= button_to "Create Pokemon form", new_pokemon_path, :class => "button medium", :method => :get %>
<%- end -%>